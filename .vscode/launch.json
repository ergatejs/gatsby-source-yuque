  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["${workspaceFolder}/index.ts"],
      "env": {
        "DEBUG": "typescript-boilerplate"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "cwd": "${workspaceRoot}",
      "args": ["--i", "--config", "jest.config.js"]
    }
  ]
}
